<div class="form-container">
    <% form_for([:admin,@vle_document],:html=>{:class=>'cmxform'}) do |f| %>
    <p class="legend">
        <strong>Note:</strong>
        Required fields are marked with an asterisk (<em>*</em>)
    </p>
    <fieldset>
        <legend>
            <%= heading %>
        </legend>
        <%= f.error_messages %>
         <div>
               <label for="vle_representative_id">
          Representative Name<em>*</em>
          </label>
          <%= collection_select(:vle_document,:user_id,Role.find_by_name('vle_representative').users,:id,:name,:prompt=>"Select a representative") %>
          </div>
        <div>
            <label for="agreement_paper">
                Agreemenet Paper <em>*</em>
            </label>
            <%= f.text_field :agreement_paper %>
        </div>
        <div>
        <label for="address_proof">
          Address Proof<em>*</em>
          </label>
           <%= f.check_box :address_proof %>
        </div>
        <div>
       <label for="education_proof">
                Education Proof <em>*</em>
        </label>
        <%= f.check_box :education_proof %>
        </div>
        <div>
        <label for="photograph_proof">
                Photograph Proof<em>*</em>
        </label>
            <%= f.check_box :photograph_proof %>
        </div>
        <div>
        <label for="dd_number">
             DD Number <em>*</em>
        </label>
            <%= f.text_field :dd_number %>
        </div>
        <div>
        <label for="dd_date">
        DD Date <em>*</em>
        </label>
        <%= f.date_select :dd_date %>
        </div>
        <div>
        <label for="dd_bank_name">
                DD Bank Name<em>*</em>
        </label>
            <%= f.text_field :dd_bank_name %>
        </div>
        <div>
        <label for="dd_branch_name">
                DD  <eBranch Name>*</em>
        </label>
            <%= f.text_field :dd_branch_name %>
        </div>
        <div>
       <label for="dd_amount">
              DD Amount <em>*</em>
       </label>
       <%= f.text_field :dd_amount %>
        </div>

        <div class="buttonrow">
            <%= f.submit button_name ,:class=>'button' %>
        </div>
    </fieldset>
    <% end %>
</div>

