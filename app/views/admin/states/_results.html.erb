<div id="state_list" class="list">
    <%if @states.blank? %>
    <div class="empty">There are No States Yet..!</div>
    <%else %>
    <table width="100%">
        <tr>
            <td align="left">
                <h3 align="left"><%=@table_heading ||= 'Listing States' %></h3>
            </td>
            <td align="right">
                <b><i>per page</i></b>
                <%=per_page %> | <%= page_entries_info @states %>
            </td>
        </tr>
    </table>
    <table class="tablesorter" cellspacing="1">
        <thead>
            <tr>

                <th>
                   <%= sortable 'name' %>
                </th>

                <th>
                    <%= sortable 'description' %>
                </th>
               <th><%= sortable "created_by" %></th>
		<th><%= sortable "created_at" %></th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <%=render :partial=>'state',:collection=>@states %>
    </table>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= will_paginate @states %>
    <% end %>
</div>

