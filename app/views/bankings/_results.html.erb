<div id="banking_list" class="list">

    <%if @bankings.blank? %>
    <div class="empty">There are no Bank Accounts Yet..!</div>
    <%else %>
    <table width="100%">
        <tr>
            <td align="left">
                <h3 align="left"><%=@table_heading ||= 'Bank Accounts' %></h3>
            </td>
            <td align="right">
                <b><i>per page</i></b>
                <%=per_page %> | <%= page_entries_info @bankings %>
            </td>
        </tr>
    </table>
    <table class="tablesorter" cellspacing="1">
        <thead>
            <tr>

                <th>
                <%= sortable 'account number' %>
                   
                </th>
                <th>
                Bank Name
                </th>
                
                <th>
                  Account Type
                </th>
                <th>
                  Name of the Holder
                </th>
              
                <th>
                  Transaction Date
                </th>
                 <th>
                    Action
                </th>
        <%=render :partial=>'banking',:collection=>@bankings %>
    </table>
    <%= hidden_field_tag :direction, params[:direction] %>
    <%= hidden_field_tag :sort, params[:sort] %>
    <%= will_paginate @bankings%>
<% end %>
</div>

