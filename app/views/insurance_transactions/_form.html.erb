<div class="form-container">
<%= form_for(@insurance_transaction) do |form| %>
 <p class="legend"><strong>Note:</strong> Required fields are marked with an asterisk (<em>*</em>)</p>
<fieldset>
<legend><%=heading %></legend>

 <%= form.error_messages %>

<div>
    <label for="policy_number">Policy Number<em>*</em></label>
   <%= form.text_field :policy_number %>
  </div>
  <div>
    <label for="company">Name Of Company<em>*</em></label>
   <%= form.text_field :company%>
  </div>
<div>
    <label for="policy_name">Policy Name<em>*</em></label>
     <%= form.text_field :policy_name%>
 </div>
<div>
    <label for="premium_amount">Premium Amount<em>*</em></label>
  <%= form.text_field :premium_amount%>
  </div>
  
<div>
    <label for="remarks">Remarks</label>
   <%= form.text_area :remarks, :col=>10, :rows=>5 %>
  </div>

 <div class="buttonrow">
    <%= form.submit button_name ,:class=>'button'%>
  </div>
  </fieldset>
<% end %>
</div>
