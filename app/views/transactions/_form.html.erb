<div class="form-container">
<%= form_for(@transaction) do |form| %>
 <p class="legend"><strong>Note:</strong> Required fields are marked with an asterisk (<em>*</em>)</p>
<fieldset>
<legend><%=heading %></legend>

 <%= form.error_messages %>
<div>
    <label for="bank_name">Bank Name<em>*</em></label>
   <%= form.text_field :bank_name, :value=>'STATE BANK OF INDIA'%>
  </div>
<div>
    <label for="account_number">Account Number <em>*</em></label>
   <%= form.text_field :account_number %>
  </div>
  <div>
    <label for="mode_of_transaction">Mode Of Transaction <em>*</em></label>
   <%= form.radio_button :mode_of_transaction, 'Credit', :checked => true %> Credit
   <%= form.radio_button :mode_of_transaction, 'Debit' %> Debit
  </div>
  
<div>
    <label for="address">Amount<em>*</em></label>
   <%= form.text_field :amount %>
  </div>
<div><label for="date_of_birth "> Date<em>*</em></label>
       <%= form.date_select:date,:start_year => 1940 %>
 </div>
 <div class="buttonrow">
    <%= form.submit button_name ,:class=>'button'%>
  </div>
  </fieldset>
<% end %>
</div>
